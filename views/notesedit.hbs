<div class="row">
  <div class="col col-xs-12 col-md-6 col-lg-6">
    <form method="POST" action="/notes/save">
      <input type="hidden" name="create" value="{{create}}" />

      {{#unless create}}
      <div class="form-group">
        <label for="id">Key {{id}}</label>
        <input type="hidden" name="id" value="{{id}}" />
      </div>
      {{/unless}}

      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="title" value="{{note.title}}" placeholder="Do something..."/>
      </div>

      <div class="form-group">
        <textarea required class="form-control" placeholder="Enter a note..." name="body" cols="40" rows="10">{{note.body}}</textarea>
      </div>


      <p><button class="btn btn-default" type="submit">Submit</button></p>
    </form>
  </div>
</div>
