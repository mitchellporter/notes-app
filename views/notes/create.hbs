<div class="row">
  <div class="col col-xs-12 col-md-6 col-lg-6">
   <h3>Add note</h3>
    <form method="POST" action="/notes/store" class="form-horizontal">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="form-control" type="text" name="title" value="" placeholder="Do something..."/>
      </div>
      <div class="form-group">
        <textarea required class="form-control" placeholder="Enter a note..." name="body" cols="40" rows="10"></textarea>
      </div>
      <p><button class="btn btn-primary" type="submit">Create</button></p>
    </form>
  </div>
</div>
